import java.util.Random;
import java.util.Arrays;
import java.util.List;

public class RotateArray
{

    //global params 
 
    // constructor 

    // setter 

    // getter 


    // method for algo
    // public static void algo (Array[] most, Array[] mid, Array[] low, int amountToRotate)
    // {

    //     // add in the tasks via Main()

